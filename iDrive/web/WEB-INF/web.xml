<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>iDrive</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <location>/error.html</location>
  </error-page>
  <context-param>
    <param-name>dbDriver</param-name>
    <param-value>com.mysql.jdbc.Driver</param-value>
  </context-param>
  <context-param>
    <param-name>dbServerName</param-name>
    <param-value>localhost</param-value>
  </context-param>
  <context-param>
    <param-name>dbPort</param-name>
    <param-value>3306</param-value>
  </context-param>
  <context-param>
    <param-name>dbDatabase</param-name>
    <param-value>idrive</param-value>
  </context-param>
  <context-param>
    <param-name>dbUsername</param-name>
    <param-value>root</param-value>
  </context-param>
  <context-param>
    <param-name>dbPassword</param-name>
    <param-value></param-value>
  </context-param>
  <context-param>
    <param-name>dbType</param-name>
    <param-value>mysql</param-value>
  </context-param>
  <servlet>
    <servlet-name>AccountCheckerServlet</servlet-name>
    <servlet-class>controller.AccountCheckerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AccountSeparatorServlet</servlet-name>
    <servlet-class>controller.AccountSeparatorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImportCSVServlet</servlet-name>
    <servlet-class>controller.ImportCSVServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewReservationServlet</servlet-name>
    <servlet-class>controller.ViewReservationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>administrator</servlet-name>
    <jsp-file>/administrator.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>employee</servlet-name>
    <jsp-file>/employee.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>manager</servlet-name>
    <jsp-file>/manager.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AccountCheckerServlet</servlet-name>
    <url-pattern>/accountchecker.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AccountSeparatorServlet</servlet-name>
    <url-pattern>/accountseparator.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logoutservlet.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>administrator</servlet-name>
    <url-pattern>/administrator</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>employee</servlet-name>
    <url-pattern>/employee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>manager</servlet-name>
    <url-pattern>/manager</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImportCSVServlet</servlet-name>
    <url-pattern>/import.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewReservationServlet</servlet-name>
    <url-pattern>/viewreservationservlet.html</url-pattern>
  </servlet-mapping>
</web-app>